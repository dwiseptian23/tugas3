<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="GOZEAL"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gmbrkaos"
            android:layout_width="178dp"
            android:layout_height="214dp"
            android:src="@drawable/kaos1" />
        <TextView
            android:id="@+id/deskkaos"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@color/white"
            android:text="Gozeal | Tees Regular Fit"
            android:layout_width="match_parent"
            android:layout_height="178dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gmbrhoodie"
            android:layout_width="178dp"
            android:layout_height="214dp"
            android:src="@drawable/hooide1" />
        <TextView
            android:id="@+id/deskhoodie"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@color/white"
            android:text="Gozeal | Hoodie Boxy"
            android:layout_width="match_parent"
            android:layout_height="178dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gmbrtopi"
            android:layout_width="178dp"
            android:layout_height="214dp"
            android:src="@drawable/topi1" />
        <TextView
            android:id="@+id/desktopi"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:background="@color/white"
            android:text="Gozeal | Head Wear"
            android:layout_width="match_parent"
            android:layout_height="178dp"/>
    </LinearLayout>
</LinearLayout>